+bool OnGossipHello(Player* pPlayer, Creature* pCreature)
+{
+	if(ConfigMgr::GetBoolDefault("Npc_Buff.OnlyGMs", false)) // If Npc_Buff.OnlyGMs is enabled in worldserver.conf
+		if (pPlayer->GetSession()->GetSecurity() == SEC_PLAYER)
+		{
