+                creature->SetVisible(false);
+                creature->setFaction(35);
+            }
+            return false;
+        }
+        case CREATURE_OTHER:
+        {
+            if (isWarTime())
+            {
+                creature->SetVisible(false);
+                creature->setFaction(35);
+
+                // Prevent from hiding
+                switch (entry)
+                {
