+    }
+    else if (m_buildingState->GetTeam() == TEAM_HORDE)
+    {
+        m_value = -m_maxValue;
+        m_State = OBJECTIVESTATE_HORDE;
+    } else {
+        m_value = 0;
+        m_State = OBJECTIVESTATE_NEUTRAL;
+    }
